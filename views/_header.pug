header.header    
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt= 'Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt= `Photo`)
                span=user.name.split(' ')[0] 
                //-this gets first name, splits at the space between first and last name 
                //-Cassnadra Kornhiser, just need first name
        else
            a.button.nav__el(href='/login') Log in
            a.button.nav__el.nav__el--cta Sign up
            //-can set up sign up on your own time

